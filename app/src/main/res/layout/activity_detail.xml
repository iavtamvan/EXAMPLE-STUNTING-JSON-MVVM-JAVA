<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    tools:context=".DetailActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/iv_detail"
                android:src="@drawable/ic_dashboard_black_24dp"
                android:contentDescription="@string/ivbackdrop" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cagliostro"
                android:text="@string/judul_stunting"
                android:id="@+id/tv_title_detail"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cagliostro"
                android:text="@string/jenis_stunting"
                android:id="@+id/tv_jenis_detail"
                android:textColor="@android:color/darker_gray"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cagliostro"
                android:text="@string/isi_stunting"
                android:layout_marginTop="18dp"
                android:id="@+id/tv_isi_detail"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    
    

</LinearLayout>